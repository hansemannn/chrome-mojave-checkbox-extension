{
  "name": "Mojave Checkbox-Fix",
  "version": "0.1",
  "description": "A tiny extension to fix the checkboxes appearance in macOS Mojave",
  "permissions": ["activeTab", "declarativeContent"],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["http://*/*", "https://*/*"],
    "all_frames": true
  }],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2
}
